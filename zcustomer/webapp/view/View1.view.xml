<mvc:View
	controllerName="zcustomer.controller.View1"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:html="http://www.w3.org/1999/xhtml"
	displayBlock="true"
	xmlns="sap.m"
>
	<Page
		id="page"
		title="{i18n>title}"
	>
		<content>
			<smartFilterBar:SmartFilterBar
				id="smartFilterBar"
				liveMode="true"
				entitySet="ZRDW_CDS_CUSTOMERS"
				persistencyKey="smartFilterBar"
			>
				<smartFilterBar:controlConfiguration>
					<smartFilterBar:ControlConfiguration
						key="Nome"
						label="Nome"
						visibleInAdvancedArea="true"
					/>
				</smartFilterBar:controlConfiguration>
			</smartFilterBar:SmartFilterBar>
			<smartTable:SmartTable
				id="StCustomers"
				xmlns:smartTable="sap.ui.comp.smarttable"
				xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
				entitySet="ZRDW_CDS_CUSTOMERS"
				tableType="ResponsiveTable"
				header="{i18n>items}"
				persistencyKey="SmartTableAnalytical_Explored"
				class="sapUiResponsiveContentPadding"
				app:useSmartToggle="true"
				enableAutoBinding="true"
				initiallyVisibleFields="CodigoCliente,Nome,Endereco,Telefone,DataCriacao,HoraCriacao,Usuario"
				showFullScreenButton="true"
				busyIndicatorDelay="{listView>/delay}"
				smartFilterId="smartFilterBar"
				useExportToExcel="true"
				beforeExport="onBeforeExport"
				useVariantManagement="true"
				useTablePersonalisation="true"
				showRowCount="true"
				demandPopin="true"
				enableAutoColumnWidth="true"
			>
				<Table mode="MultiSelect"/>
				<smartTable:customToolbar>
					<OverflowToolbar design="Transparent">
						<ToolbarSpacer/>
						<OverflowToolbarButton
							icon="sap-icon://create"
							text="{i18n>createCustomer}"
							tooltip="{i18n>createCustomer}"
							press="onDialogCreateCustomer"
						/>
                        <OverflowToolbarButton
							icon="sap-icon://edit"
							text="{i18n>editCustomer}"
							tooltip="{i18n>editCustomer}"
							press="onDialogEditCustomer"
						/>
						<OverflowToolbarButton
							icon="sap-icon://delete"
							text="{i18n>deleteCustomer}"
							tooltip="{i18n>deleteCustomer}"
							press="onDeleteCustomer"
						/>
					</OverflowToolbar>
				</smartTable:customToolbar>
			</smartTable:SmartTable>
		</content>
	</Page>
</mvc:View>